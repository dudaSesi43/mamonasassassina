<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mamonasassassinas.despachePage"
             Title="Despache"
             BackgroundColor="LightPink">

    <StackLayout Padding="30">

        <!-- Título -->
        <Label Text="Despache" 
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- Campo de Usuário -->
        <Entry Placeholder="usuário:" 
               x:Name="UserEntry"
               Margin="0,20,0,0"
               BackgroundColor="White" />

        <!-- Campo de Senha -->
        <Entry Placeholder="Senha:" 
               x:Name="PasswordEntry"
               IsPassword="True"
               Margin="0,20,0,0"
               BackgroundColor="White" />

        <!-- Campo de Assinatura do Cliente -->
        <Entry Placeholder="Assinatura do cliente" 
               x:Name="SignatureEntry"
               Margin="0,20,0,0"
               BackgroundColor="White" />

        <!-- Botão Voltar -->
        <Button Text="Voltar"
                x:Name="BackButton"
                BackgroundColor="LightGray"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>